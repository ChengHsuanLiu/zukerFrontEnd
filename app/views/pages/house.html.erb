<script type="text/javascript">
	$(document).ready(function(){
		var windowPostion;
		var windowHeight = $(window).height();;
		var contactInfoTop = $('#contact-info').offset().top;
		var contactInfoHeight = $('#contact-info').height();

		$('.form-container-trigger').click(function(){
			var target = $(this).attr('target-link');
			var target_string = target.substring(1, target.length);
			$(target).slideToggle(500);
		})

		$(window).scroll(function(){
			windowPostion = $(window).scrollTop();
			windowWidth = $(window).width();

			if(windowWidth > 996){

				if(windowPostion > contactInfoTop + contactInfoHeight + windowHeight ){
					if(!$('#contact-info').hasClass('fixed-contact-info')){
						$('#contact-info').addClass('fixed-contact-info');
						$('#contact-info-trigger').removeClass('hide');
						setTimeout(function(){$('#contact-info').addClass('active');}, 100);
					}
				}

				if(windowPostion < contactInfoTop + contactInfoHeight + windowHeight ){
					if($('#contact-info').hasClass('fixed-contact-info')){
						$('#contact-info').removeClass('active');
						$('#contact-info-trigger').addClass('hide');
						setTimeout(function(){$('#contact-info').removeClass('fixed-contact-info');}, 100);
					}
				}


			}

		})

	})
</script>
